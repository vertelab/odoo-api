<?xml version="1.0" encoding="utf-8"?>

<data>
    <record model="ir.ui.view" id="api_raindance_client_config_view_list">
        <field name="name">API Raindance Client Config View List</field>
        <field name="model">api.raindance.client.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="url"/>
                <field name="environment"/>
                <field name="client_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="api_raindance_client_config_view_form">
        <field name="name">API Raindance Client Config View Form</field>
        <field name="model">api.raindance.client.config</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="testing_get_invoices" string="Get invoices"
                            type="object"/>
                    <button name="testing_get_invoice" string="Get invoice"
                            type="object"/>
                </header>
                <group>
                    <group>
                        <field name="url"/>
                        <field name="environment"/>
                        <field name="client_id"/>
                        <field name="client_secret" password="True"/>
                    </group>
                    <group string="Requests" colspan="4">
                        <field name="request_history_ids" nolabel="1"
                               colspan="4">
                            <tree>
                                <field name="url"/>
                                <field name="method"/>
                                <field name="response_code"/>
                                <field name="message"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="url"/>
                                    <field name="method"/>
                                    <field name="payload"/>
                                    <field name="request_headers"/>
                                    <field name="params"/>
                                    <field name="response_code"/>
                                    <field name="response_headers"/>
                                    <field name="message"/>
                                </group>
                            </form>
                        </field>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="api_raindance_client_action">
        <field name="name">API Raindance Client Config</field>
        <field name="res_model">api.raindance.client.config</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="api_raindance_client_config"
              name="API Raindance"
              action="api_raindance_client_action"
              parent="api_ipf.api_client_config_parent_menu"
              sequence="8"/>
    <record model="ir.ui.view" id="api_raindance_client_config_request_history">
        <field name="name">API Raindance Client Config Request History View List</field>
        <field name="model">api.raindance.request.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="url"/>
                <field name="method"/>
                <field name="payload"/>
                <field name="request_headers"/>
                <field name="response_headers"/>
                <field name="response_code"/>
                <field name="message"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="api_raindance_client_config_request_history_form">
        <field name="name">API Raindance Client Config Request History View Form</field>
        <field name="model">api.raindance.request.history</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="config_id"/>
                    <field name="url"/>
                    <field name="method"/>
                    <field name="payload"/>
                    <field name="request_headers"/>
                    <field name="response_headers"/>
                    <field name="params"/>
                    <field name="response_code"/>
                    <field name="message"/>
                </group>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="api_raindance_client_config_request_history_search">
        <field name="name">API Raindance Client Config Request History View Search</field>
        <field name="model">api.raindance.request.history</field>
        <field name="arch" type="xml">
            <search>
                <field name="url"/>
                <separator/>
                <filter name="create_date" string="Create Date" date="create_date" groups="base.group_no_one"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Response Code" name="response_code" context="{'group_by': 'response_code'}"/>
                    <filter string="Created On" name="create_date" context="{'group_by': 'create_date'}"
                            groups="base.group_no_one"/>
                </group>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="api_raindance_client_config_request_history_action_window">
        <field name="name">API Raindance Client Config Request History</field>
        <field name="res_model">api.raindance.request.history</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_api_raindance_client_config_request_history"
              name="API Raindance"
              action="api_raindance_client_config_request_history_action_window"
              parent="api_ipf.client_config_request_history_parent_menu"
              sequence="8"/>
</data>
