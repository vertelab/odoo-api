<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.ipf</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="IPF" string="IPF" data-key="api_ipf"
                         groups="base.group_system">
                        <h2>Common settings</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" title="Add IPF Client Secret">
                                <div class="o_setting_right_pane">
                                    <label for="client_secret"/>
                                    <div class="text-muted">
                                        IPF Client Secret.
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="client_secret" password="True"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" title="Add IPF Client ID">
                                <div class="o_setting_right_pane">
                                    <label for="client_id"/>
                                    <div class="text-muted">
                                        IPF Client ID.
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="client_id"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" title="Add IPF System ID">
                                <div class="o_setting_right_pane">
                                    <label for="system_id"/>
                                    <div class="text-muted">
                                        IPF System ID.
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="system_id"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" title="Choose server environment">
                                <div class="o_setting_right_pane">
                                    <label for="environment"/>
                                    <div class="text-muted">
                                        Server Environment.
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="environment"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        <menuitem id="api_client_config_parent_menu"
                  name="API Client Config"
                  parent="base.menu_custom"
                  sequence="121"/>
        <menuitem id="client_config_request_history_parent_menu"
                  name="Request History"
                  parent="api_client_config_parent_menu"
                  sequence="120"/>


    </data>
</odoo>
