<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_api_odoo_xmlrpc" model="ir.ui.view">
        <field name="name">Synchronization</field>
        <field name="model">api.odoo.synchro</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Transfer Data To Server">
                <group col="4">
                    <field name="server_url"/>
                    <field name="user_id"/>
                </group>
                <footer>
                    <button name="upload_download_multi_thread" string="Synchronize"
                            type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_api_odoo_xmlrpc" model="ir.actions.act_window">
        <field name="name">Synchronization</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">api.odoo.synchro</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_api_odoo_xmlrpc"/>
        <field name="target">new</field>
    </record>

    <record id="view_odoo_api_xmlrc_finish" model="ir.ui.view">
        <field name="name">Synchronization</field>
        <field name="model">api.odoo.synchro</field>
        <field name="arch" type="xml">
            <form string="Synchronization Completed!">
                <separator string="The synchronisation has been started. You will receive a request when it's done."/>
                <footer>
                    <button string="Ok" class="oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <menuitem id="menu_synchronization" name="Synchronization" parent="base.menu_administration"/>

    <menuitem parent="api_odoo_xmlrpc.menu_synchronization" name="Synchronize"
              action="action_view_api_odoo_xmlrpc" id="menu_action_view_odoo_api_synchro"/>

</odoo>
